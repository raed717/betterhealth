<!DOCTYPE html>

<title>Product index</title>

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.category }}</td>
                <td>
                    <a href="{{ path('app_first_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_first_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_first_new') }}">Create new</a>
{% endblock %}
